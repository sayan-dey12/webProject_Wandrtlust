<% layout("/layouts/boilerplate") %>
<body>
    <h3 class="mt-3">All Listings</h3>
    <!-- <form method="GET" action="/listing/new">
        <button>Add new listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings){%>
            <a href="/listing/<%= listing._id %>" class="card-anc">
                <div class="card col listing-card">
                    <img src="<%=listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b><%=listing.title%></b>
                            <br>
                            &#x20B9 <%=listing.price.toLocaleString("en-IN") %>/night
                        </p>
                    </div>
                </div>
            </a>
          <%}%>
    </div>
</body>

